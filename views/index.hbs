<div class="landing container main custom-form">
    <div class="row">
        <div class="col">
            <div class="card default-z top-scorer">
                <div class="label">Current Top Scorer</div>
                <div class="inline-block">
                    <div class="name">{{topScorrer.name}}</div>
                    <div class="email">{{topScorrer.email}}</div>
                </div>
                <div class="inline-block">
                    <div class="score">{{topScorrer.score}}</div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card default-z login">
                <img src="/images/game_name.png" alt="Flappy Ambulance">
                <form id="credForm">

                    {{!-- Name --}}
                    <div class="group">
                        <input type="text" required autocomplete="off" id="name" data-params="Player_Name__c">
                        <span class="bar"></span>
                        <label>Name</label>
                    </div>

                    {{!-- Email --}}
                    <div class="group">
                        <input type="email" autocomplete="off" id="email" required data-params="Email__c">
                        <span class="bar"></span>
                        <label>Email</label>
                    </div>

                    <select name="serviceLine" id="serviceLine" data-params="Service_Line__c">
                        <option value="" disabled selected>Choose your Service Line</option>
                        {{#each serviceLineOptions}}
                            <option value="{{value}}">{{label}}</option>
                        {{/each}}
                    </select>

                    <div class="group error">
                        <label for="" class="fill-all">All fields are required</label>
                        <label for="" class="name">Name should contain only alphabets</label>
                        <label for="" class="email">Email has to be of the format xxx@xxx.xxx</label>
                        <label for="" class="service">Select a service line</label>
                    </div>
                </form>

                <button id="enterGame" class="submit">
                    Start Game
                </button>
            </div>
        </div>
    </div>
</div>